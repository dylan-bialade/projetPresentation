{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Ajouter un nouvel utilisateur</h1>
    {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.nom, 'Nom d\'utilisateur') }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email, 'Adresse email') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password, 'Mot de passe') }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <button type="submit" class="btn btn-primary">Créer l'utilisateur</button>

    {{ form_end(form) }}

    <a href="{{ path('app_utilisateur_list') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
</div>
{% endblock %}
